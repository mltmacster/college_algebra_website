# ====================================
# College Algebra Platform - Environment Variables
# ====================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ====================================
# DATABASE CONFIGURATION
# ====================================
DATABASE_URL="postgresql://username:password@localhost:5432/college_algebra?connect_timeout=30&pool_timeout=30&connection_limit=10&pool_max=10&pool_min=2&idle_timeout=300&max_lifetime=3600&connection_timeout=30"

# Database Configuration Options
DATABASE_RETRY_ATTEMPTS=3
DATABASE_RETRY_DELAY=1000
DB_KEEPALIVE_INTERVAL=120000
DB_CONNECTION_CHECK_INTERVAL=30000

# ====================================
# AUTHENTICATION
# ====================================
# Generate a secret key for NextAuth:
# Run: openssl rand -base64 32
# Or: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NEXTAUTH_SECRET="your-secret-key-here-minimum-32-characters-long"

# Application URLs
# Development:
NEXTAUTH_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Production (replace with your actual domain):
# NEXTAUTH_URL="https://your-domain.com"
# NEXT_PUBLIC_APP_URL="https://your-domain.com"

# ====================================
# APPLICATION CONFIGURATION
# ====================================
NODE_ENV="development"  # Options: development, production, test
PORT=3000

# API Configuration
API_TIMEOUT=10000

# ====================================
# OPTIONAL: MONITORING & ANALYTICS
# ====================================
# Uncomment and configure if using external services

# Sentry (Error Tracking)
# NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"

# Google Analytics
# NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Vercel Analytics
# NEXT_PUBLIC_VERCEL_ANALYTICS_ID="your-analytics-id"

# ====================================
# OPTIONAL: REDIS CACHING
# ====================================
# Uncomment if using Redis for caching
# REDIS_URL="redis://localhost:6379"
# REDIS_TOKEN="your-redis-token"

# ====================================
# OPTIONAL: EMAIL CONFIGURATION
# ====================================
# Uncomment if setting up email notifications
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# SMTP_FROM="noreply@collegealgebra.com"

# ====================================
# OPTIONAL: EXTERNAL APIS
# ====================================
# Add any third-party API keys here
# OPENAI_API_KEY="sk-..."
# STRIPE_SECRET_KEY="sk_test_..."
# STRIPE_PUBLISHABLE_KEY="pk_test_..."
